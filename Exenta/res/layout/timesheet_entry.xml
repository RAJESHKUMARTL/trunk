<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/TimeEntryBlue"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/timesheetName1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="3dp"
                    android:text="@string/timesheetentry"
                    android:textColor="@color/default_white"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/timesheetDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/default_white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/parrotgreen"
                    android:gravity="center"
                    android:paddingTop="5dp" >

                    <TextView
                        android:id="@+id/timesheetTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:text="TextView"
                        android:textColor="@color/default_white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="30dp" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/Clockin"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:background="@drawable/buttonstylein"
                        android:text="@string/timesheetclockin"
                        android:textColor="@color/default_white" />

                    <Button
                        android:id="@+id/Clockout"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:background="@drawable/buttonstyleout"
                        android:text="@string/timesheetclockout"
                        android:textColor="@color/default_white" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/entrystatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/timesheettextview"
                    android:textColor="@color/POMEGRANATE" />

                <TableLayout
                    android:id="@+id/tableLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="*" >
                </TableLayout>
                
          <com.google.android.gms.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="250dp"
            android:paddingTop="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/map" />


               <!-- <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:paddingTop="10dp"
        android:layout_marginTop="20dp"
        class="com.google.android.gms.maps.SupportMapFragment" 
         android:name="com.exenta.timeSheet.TimeSheetEntry"/> -->  
                
                
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/YellowBlur"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/pretime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="3dp"
                    android:text="@string/pretimesheet"
                    android:textColor="@color/default_white"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            android:weightSum="2"
            android:layout_marginRight="3dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp" >

                    <EditText
                        android:id="@+id/Datefrom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editextstyle"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/datefrom"
                        android:inputType="date" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp" >

                    <EditText
                        android:id="@+id/Dateto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editextstyle"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="@string/dateto"
                        android:inputType="date" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
  <!--               android:paddingLeft="5dp"  -->

                <ImageButton
                    android:id="@+id/imageView1"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search_icon_home" />
            </LinearLayout>
        </LinearLayout>

        <TableLayout
            android:id="@+id/tablepreviousreport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingBottom="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
            android:shrinkColumns="*"
            android:stretchColumns="*" >
        </TableLayout>
    </LinearLayout>

</ScrollView>