<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.exentahrms.pod.ApprovalPODPage" 
    >
<RelativeLayout 
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    >

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/empname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:text="Emp Name"
            android:textSize="@dimen/profile_large"
            android:textColor="@color/pod_blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jobtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/empname"
            android:layout_marginBottom="8dp"
            android:text="Job Title" />

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/jobtitle"
            android:layout_marginBottom="5dp"
            android:text="Company Name" />

        <TextView
            android:id="@+id/applieddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/empname"
            android:layout_alignBottom="@+id/empname"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="Applied Date" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/divider_2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/topLayout"
        android:layout_marginBottom="3dp"
        android:background="@android:color/holo_purple"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/divider_3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/divider_2"
        android:background="@android:color/holo_purple"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/imageView1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/topLayout"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-40dp"
        android:background="@drawable/layout_round"
        android:gravity="center"
        android:orientation="vertical"
        android:scaleType="fitXY"
        android:src="@drawable/abc_ab_bottom_solid_dark_holo" >

        <TextView
            android:id="@+id/totaldays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Days" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divider_3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding"
            android:layout_marginLeft="@dimen/profile_margin_left"
            android:text="Emp Code"
            android:textSize="@dimen/profile_small" />

        <TextView
            android:id="@+id/empcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/text_padding"
            android:layout_marginLeft="@dimen/profile_margin_left"
            android:text="Emp Code"
            android:textColor="@color/pod_blue"
            android:textSize="@dimen/profile_medium" />

        <include layout="@layout/divider" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/profile_margin_left"
            android:padding="@dimen/text_padding"
            android:text="POD Type"
            android:textSize="@dimen/profile_small" />

        <TextView
            android:id="@+id/podtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/empcode"
            android:padding="@dimen/text_padding"
            android:layout_marginLeft="@dimen/profile_margin_left"
            android:text="POD Type"
            android:textColor="@color/pod_blue"
            android:textSize="@dimen/profile_medium" />

        <include layout="@layout/divider" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding"
            android:layout_marginLeft="@dimen/profile_margin_left"
            android:text="Total Days"
            android:textSize="@dimen/profile_small" />

        <TextView
            android:id="@+id/totalday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/podtype"
            android:padding="@dimen/text_padding"
            android:layout_marginLeft="@dimen/profile_margin_left"
            android:text="Total Days"
            android:textColor="@color/pod_blue"
            android:textSize="@dimen/profile_medium" />

        <include layout="@layout/divider" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding"
            android:layout_marginLeft="@dimen/profile_margin_left"
            android:text="Reason"
            android:textSize="@dimen/profile_small" />

        <TextView
            android:id="@+id/reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/totaldays"
            android:layout_marginLeft="@dimen/profile_margin_left"
            android:padding="@dimen/text_padding"
            android:text="Reason"
            android:textColor="@color/pod_blue"
            android:textSize="@dimen/profile_medium" />
        <include layout="@layout/divider" />

        <EditText
            android:id="@+id/response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/reason"
            android:ems="10"
            android:background="@drawable/editextstyle"
            android:hint="Response"
            android:lines="3"
            android:focusableInTouchMode="true"
            android:inputType="textMultiLine" >
        </EditText>

        <RadioGroup
            android:id="@+id/RadioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/response"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/approve_radiobtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Approval" />

            <RadioButton
                android:id="@+id/reject_radiobtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center" >

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/green_button_border"
                android:text="Submit"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/red_button_border"
                android:text="Cancel"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
</ScrollView>