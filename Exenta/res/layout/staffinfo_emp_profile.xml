<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res/com.example.exenta"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/empcode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/profile_margin"
                android:layout_marginTop="@dimen/profile_margin"
                android:gravity="right"
                android:textColor="@android:color/white"
                android:textSize="@dimen/profile_medium" />

  <com.android.volley.toolbox.CircularNetworkImageView
     android:id="@+id/thumbnail"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/emp_icon"
        app:border="true"
        app:border_color="@color/GrayLight"
        app:border_width="4dp"
        app:shadow="true" 
       />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/layout_padding"
                android:weightSum="2" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1.25"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/profile_large" />

                <TextView
                    android:id="@+id/jobtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.75"
                    android:textSize="@dimen/profile_medium" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="3dp"
                android:background="@color/profile_boarder_blue" />

            <TextView
                android:id="@+id/company_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/profile_margin_left"
                android:padding="@dimen/text_padding"
                android:text="@string/cmpy_name"
                android:textColor="@color/profile_header_txt"
                android:textSize="@dimen/profile_small" />

            <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/profile_margin_left"
                android:padding="@dimen/text_padding"
                android:textColor="@color/profile_blue"
                android:textSize="@dimen/profile_medium" />

            <include layout="@layout/divider" />

            <TextView
                android:id="@+id/department_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/profile_margin_left"
                android:padding="@dimen/text_padding"
                android:text="@string/department"
                android:textColor="@color/profile_header_txt"
                android:textSize="@dimen/profile_small" />

            <TextView
                android:id="@+id/department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/profile_margin_left"
                android:padding="@dimen/text_padding"
                android:textColor="@color/profile_blue"
                android:textSize="@dimen/profile_medium" />

            <include layout="@layout/divider" />

            <TextView
                android:id="@+id/experience_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/profile_margin_left"
                android:padding="@dimen/text_padding"
                android:text="@string/experience"
                android:textColor="@color/profile_header_txt"
                android:textSize="@dimen/profile_small" />

            <TextView
                android:id="@+id/experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/profile_margin_left"
                android:padding="@dimen/text_padding"
                android:textColor="@color/profile_blue"
                android:textSize="@dimen/profile_medium" />

            <include layout="@layout/divider" />

            <TextView
                android:id="@+id/email_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/profile_margin_left"
                android:padding="@dimen/text_padding"
                android:text="@string/mail"
                android:textColor="@color/profile_header_txt"
                android:textSize="@dimen/profile_small" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/profile_margin_left"
                android:padding="@dimen/text_padding"
                android:textColor="@color/profile_blue"
                android:textSize="@dimen/profile_medium" />

            <include layout="@layout/divider" />

            <TextView
                android:id="@+id/report_mananger_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/profile_margin_left"
                android:padding="@dimen/text_padding"
                android:text="@string/report_mngr"
                android:textColor="@color/profile_header_txt"
                android:textSize="@dimen/profile_small" />

            <TextView
                android:id="@+id/report_mananger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/profile_margin_left"
                android:padding="@dimen/text_padding"
                android:textColor="@color/profile_blue"
                android:textSize="@dimen/profile_medium" />

            <include layout="@layout/divider" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>