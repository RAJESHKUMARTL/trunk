<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/per_myreq"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttoncaption"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="4"
        android:visibility="gone"         
        >

        <ImageView
            android:id="@+id/per_myreqimg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="false"
            android:src="@drawable/mypod" />

        <TextView
            android:id="@+id/per_myreqtext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.9"
            android:clickable="false"
            android:text="@string/Permission_reg"
            android:textColor="@color/text_view"
            android:textSize="16sp"
           android:textStyle="bold"  />

        <ImageView
            android:id="@+id/per_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight=".1"
            android:clickable="false"
            android:src="@drawable/blue" />
    </LinearLayout>
    
    
    
     <LinearLayout
        android:id="@+id/per_manage"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttoncaption"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="4"
        >

        <ImageView
           
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="false"
            android:src="@drawable/apply_list" />

        <TextView
           
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.9"
            android:clickable="false"
            android:text="@string/Permission_manage"
            android:textColor="@color/text_view"
            android:textSize="16sp"
           android:textStyle="bold"  />

        <ImageView           
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight=".1"
            android:clickable="false"
            android:src="@drawable/blue" />
    </LinearLayout>
 
     <LinearLayout
         android:id="@+id/per_approve"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttoncaption"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="4"
            >

        <ImageView
           
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="false"
            android:src="@drawable/approve" />

        <TextView
           
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.9"
            android:clickable="false"
            android:text="@string/Permission_approval"
            android:textColor="@color/text_view"
            android:textSize="16sp"
           android:textStyle="bold"  />

        <ImageView
           
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight=".1"
            
            android:clickable="false"
            android:src="@drawable/blue" />
    </LinearLayout>
</LinearLayout>